
<div class="container mp-4 form-shadow">
  <h2 class="text-center">Забыли пароль?</h2><br>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="input-group mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Почта", class: "form-control"  %>
    </div>

    <div class="actions">
      <%= f.submit "Отправить письмо подтверждения почты", class: "btn btn-primary form-button", class: "btn btn-primary form-button" %>
    </div>
  <% end %><br>

  <div class="text-center">
    <%= render "users/shared/links" %>
  </div>
</div>

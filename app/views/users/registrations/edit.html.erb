<div class="container mp-4">
  <h2 class="text-center">Изменеие личных данных</h2><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">@</span>
      </div>
      <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Имя пользователя" %>
    </div>

    <div class="input-group mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Электронная почта"  %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="input-group mb-3">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Пароль" %>
    </div>

    <div class="input-group mb-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Подтверждение пароля"  %>
    </div>

    <div class="input-group mb-3">

      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Текущий пароль"  %>
    </div>

    <div class="actions">
      <%= f.submit "Обновить", class: "btn btn-primary form-button" %>
    </div><br>
  <% end %>

  <h2 class="text-center">Несчастлив?</h3>

  <div class="text-center"> <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены что хотите удалить аккаунт?", turbo_confirm: "Вы уверены что хотите удалить аккаунт?" }, method: :delete, class: "btn btn-danger form-button" %></div>
  <br>
  <div class="text-center"><%= link_to "Назад", :back %></div>

</div>

<div class="container mp-4 form-shadow">
  <h2 class="text-center">Вход</h2><br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-group mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Электронная почта" %>
    </div>

    <div class="input-group mb-3">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Пароль"  %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="input-group mb-3">
        <%= f.check_box :remember_me, class: "form-check-input", type: "checkbox" %>
        <%= f.label :remember_me, "Запомнить", class: "form-check-label left-small-margin" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Войти", class: "btn btn-primary form-button" %>
    </div>
  <% end %>
  <br>
  <div class="text-center"><%= render "users/shared/links" %></div>
</div>

<%= form_for [@video, VideoLanguage.new], method: :new do |form| %>
  <div class="modal-content modal-pose container-assotiation">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
      <h5>
        <div class="container-assotiation">
          <% Language.all.each do |language| %>
            <%= hidden_field_tag :language,  value: language %>
            <%= form.submit language.language_name, class: "btn btn-sm btn-outline-secondary" %>
          <% end %>
      <%= form.submit "Готово", class: 'btn btn-primary' %>
        </div>
      </h5>
  </div>
<% end %>

<%= form_for [@video, VideoLanguage.new], method: :new do |form| %>
  <div class="modal-content modal-pose container-assotiation">
    <h4>Добавить язык</h4><br>
      <%= form.collection_select :language_id, Language.all, :id,:language_name,
                                { include_blank: "Выберите язык", class: "modal-input" },
                                { class: "form-control input-modal"} %>
      <%= form.submit "Добавить", class: 'btn btn-primary input-modal' %><br>
      <button type="button" class="btn-close modal-btn" aria-label="Close" data-bs-dismiss="modal"></button>
  </div>
<% end %>


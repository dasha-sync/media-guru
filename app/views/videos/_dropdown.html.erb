<% if current_user&.admin? %>
  <div class="dropdown">
    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"><b>Добавить категории</b></button>
    <ul class="dropdown-menu">
      <li>
        <button class='dropdown-item' data-bs-toggle='modal' data-bs-target='#new-language-modal'>
          Добавить языки
        </button>
      </li>
      <li>
        <button class='dropdown-item' data-bs-toggle='modal' data-bs-target='#new-tag-modal'>
          Добавить тэги
        </button>
      <li>
        <button class='dropdown-item' data-bs-toggle='modal' data-bs-target='#new-speaker-modal'>
          Добавить спикера
        </button>
      </li>
      <li>
        <button class='dropdown-item' data-bs-toggle='modal' data-bs-target='#new-category-modal'>
          Добавить категорию
        </button>
      </li>
    </ul>
  </div>
  <br>
<% end %>

<%= render partial: 'modal', locals: { target_id: 'new-language-modal', assotiation: :video_languages, video: @video } %>

<div class="d-flex justify-content-around popularity-report">
  <div class="border rounded mx-4 p-3 pop-card">
    <h1>Популярность видео</h1>
    <table class="table">
      <thead>
        <tr>
          <th colspan="2" scope="col"><h3>по категориям</h3></th>
        </tr>
      </thead>
      <tbody>
        <% @category_videos.each do |category_name, views_count| %>
          <tr>
            <th><%= category_name %></th>
            <td><%= views_count %> просмотров</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= column_chart @category_videos %>
  </div>
  <!-- Вторая карточка -->
  <div class="border mx-4 rounded p-3 pop-card">
    <h1>Популярность видео</h1>
    <table class="table">
      <thead>
        <tr>
          <th colspan="2" scope="col"><h3>по спикерам</h3></th>
        </tr>
      </thead>
      <tbody>
        <% @speaker_videos.each do |speaker_fio, views_count| %>
          <tr>
            <th><%= speaker_fio %></th>
            <td><%= views_count %> просмотров</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= column_chart @speaker_videos %>
  </div>
  <!-- Третья карточка -->
  <div class="border mx-4 rounded p-3 pop-card">
    <h1>Популярность видео</h1>
    <table class="table">
      <thead>
        <tr>
          <th colspan="2" scope="col"><h3>по языкам</h3></th>
        </tr>
      </thead>
      <tbody>
        <% @language_videos.each do |language_name, views_count| %>
          <tr>
            <th><%= language_name %></th>
            <td><%= views_count %> просмотров</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= column_chart @language_videos %>
  </div>
</div>

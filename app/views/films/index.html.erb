<div class="border">
    <div class="container mb-4", style="height: 900px">
    <br>
      <h1>Каталог</h1><br>
      <br>
      <% if @films.empty? %>
        <h2 class="text-center p-4">Нет фильмов</h2>
      <% else %>
        <table class="table table-hover" style="width:700px !important; margin-left:">
          <% @films.each_with_index do |event, index| %>
            <tr  %>
              <td class="bg-transparent"> <%= event.id %></td>
              <td class="bg-transparent"><%= event.film_name %></td>
            </tr>
          <% end %>
        </table>
      <% end %>
  </div>
